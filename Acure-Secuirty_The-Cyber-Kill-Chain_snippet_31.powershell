# Log in to Azure
Connect-AzAccount

# Create a storage account
$storageAccount = New-AzStorageAccount -ResourceGroupName "example-resource-group" -Name "examplestorageaccount" -Location "EastUS" -SkuName "Standard_LRS"

# Get storage account context
$ctx = $storageAccount.Context

# Upload the malicious script to the storage account
Set-AzStorageBlobContent -File "malicious-script.ps1" -Container "scripts" -Blob "malicious-script.ps1" -Context $ctx