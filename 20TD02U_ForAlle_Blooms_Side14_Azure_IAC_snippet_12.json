{
  "type": "Microsoft.Insights/logProfiles",
  "apiVersion": "2016-03-01",
  "properties": {
    "storageAccountId": "[resourceId('Microsoft.Storage/storageAccounts', parameters('storageAccountName'))]",
    "serviceBusRuleId": null,
    "locations": ["global"],
    "categories": ["Write", "Delete", "Action"],
    "retentionPolicy": {
      "enabled": true,
      "days": 365
    }
  }
}